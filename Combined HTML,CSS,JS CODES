    <script>
        let currentUser = null;
        let rides = [
            { id: 1, from: 'North Campus', to: 'Airport', seats: 2, fare: 300, creator: 'Mohak Mnagal', hostel: 'Hostel A', phone: '+91 7082269244' },
            { id: 2, from: 'Main Gate', to: 'Railway Station', seats: 3, fare: 150, creator: 'Dhruv Mittal', hostel: 'Hostel B', phone: '+91 7082269241' }
        ];

        function showPage(pageId) {
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            document.getElementById(pageId).classList.add('active');
        }

        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const fullName = document.getElementById('fullName').value;
            const email = document.getElementById('email').value;
            const phone = document.getElementById('phone').value;
            const hostel = document.getElementById('hostel').value;

            currentUser = { fullName, email, phone, hostel };
            document.getElementById('userName').textContent = fullName;
            
            showPage('dashboardPage');
            renderRides();
        });

        document.getElementById('createRideForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const newRide = {
                id: Date.now(),
                from: document.getElementById('rideFrom').value,
                to: document.getElementById('rideTo').value,
                seats: parseInt(document.getElementById('rideSeats').value),
                fare: parseInt(document.getElementById('rideFare').value),
                creator: currentUser.fullName,
                hostel: currentUser.hostel,
                phone: currentUser.phone
            };

            rides.push(newRide);
            renderRides();
            
            this.reset();
            alert('Ride alert created successfully!');
        });

        function renderRides() {
            const ridesList = document.getElementById('ridesList');
            
            if (rides.length === 0) {
                ridesList.innerHTML = '<p style="text-align: center; color: #e94560; font-weight: 500;">No rides available at the moment</p>';
                return;
            }

            ridesList.innerHTML = rides.map(ride => `
                <div class="ride-card">
                    <div class="ride-header">
                        <div class="route">${ride.from} ‚Üí ${ride.to}</div>
                        <div style="background: ${ride.seats > 0 ? '#e94560' : '#cccccc'}; padding: 0.5rem 1rem; border-radius: 8px; font-weight: 600; color: #ffffff;">
                            ${ride.seats} ${ride.seats === 1 ? 'Seat' : 'Seats'} Left
                        </div>
                    </div>
                    <div class="ride-details">
                        <div class="detail-item">
                            <span>üë§</span>
                            <span>${ride.creator}</span>
                        </div>
                        <div class="detail-item">
                            <span>üè†</span>
                            <span>${ride.hostel}</span>
                        </div>
                        <div class="detail-item">
                            <span>üí∞</span>
                            <span>‚Çπ${ride.fare} per person</span>
                        </div>
                        <div class="detail-item">
                            <span>üìû</span>
                            <span>${ride.phone}</span>
                        </div>
                    </div>
                    <button class="btn-join" onclick="joinRide(${ride.id})" ${ride.seats === 0 ? 'disabled' : ''}>
                        ${ride.seats === 0 ? 'Ride Full' : 'Join This Ride'}
                    </button>
                </div>
            `).join('');
        }

        function joinRide(rideId) {
            const ride = rides.find(r => r.id === rideId);
            if (ride && ride.seats > 0) {
                ride.seats--;
                renderRides();
                alert(`You've joined the ride from ${ride.from} to ${ride.to}!\nContact: ${ride.phone}`);
            }
        }

        function logout() {
            currentUser = null;
            document.getElementById('loginForm').reset();
            showPage('loginPage');
        }
        function cancelRide(id) {
            rides = rides.filter(r => r.id !== id);
            displayRides();
        }

        function emergencyAlert(ride) {
            alert("üö® Emergency reported for ride from " + ride.from + " to " + ride.to);
        }
        renderRides();
    </script>
</body>
